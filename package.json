{
  "name": "nemesis-express",
  "version": "1.0.0",
  "main": "electron/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register index.ts",
    "start": "node build/index.js",
    "production": "npm run build && npm run start",
    "app": "npm run build && electron-forge start",
    "make": "electron-forge make",
    "clean": "rimraf ./dist && rimraf ./build ",
    "compile": "npm run clean && npm run build && electron-packager . electron  --arch=x64,ia32 --out ./dist",
    "package": "electron-forge package",
    "copy-views": "copyfiles -u 1 src/**/*.ejs build/src && copyfiles -u 1 src/public/* build/src",
    "build": "tsc && tsc-alias -p tsconfig.json && npm run copy-views"
  },
  "keywords": [],
  "author": {
    "name": "genaro gonzalez",
    "email": "genarrogg@gmail.com"
  },
  "license": "MIT",
  "description": "",
  "dependencies": {
    "chalk": "^4.1.2",
    "console-clear": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.19.2",
    "nodemailer": "^6.9.14",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/console-clear": "^1.1.4",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "copyfiles": "^2.4.1",
    "electron": "^31.2.1",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
